<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FlixterThemeSelector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lvMovieImage"
        android:layout_width="342dp"
        android:layout_height="192dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingRight="7dp"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/llContainer"
        android:layout_width="wrap_content"
        android:layout_height="192dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/lvMovieImage"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/FlixterThemeSelector.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            tools:text="Moana" />

        <TextView
            android:id="@+id/tvOverview"
            style="@style/FlixterThemeSelector.Overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:maxLines="3"
            tools:text="In Ancient Polynesia, when a terrible curse incurred by Maui reaches an impetuous Chieftain's daughter's island, she answers the Ocean's call to seek out the demigod to set things right." />


    </LinearLayout>

</RelativeLayout>